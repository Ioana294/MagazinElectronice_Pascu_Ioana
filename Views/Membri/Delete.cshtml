    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Șterge" class="btn btn-danger" /> |
        <a asp-action="Index">Înapoi la listă</a>
    </form>
</div>
