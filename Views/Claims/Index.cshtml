@model IEnumerable<System.Security.Claims.Claim>
<h2 class="bg-primary m-1 p-1 text-white">Claim-uri</h2>
<a asp-action="Create" class="btn btn-secondary">Creează claim</a>

<table class="table table-sm table-bordered">
    <tr>
        <th>Subiect</th>
        <th>Creator</th>
        <th>Tip</th>
        <th>Valoare</th>
        <th>Ștergere</th>
    </tr>
    @foreach (var claim in Model.OrderBy(x => x.Type))
    {
<tr>
    <td>@claim.Subject.Name</td>
    <td>@claim.Issuer</td>
    <td>@claim.Type</td>
    <td>@claim.Value</td>
    <td>
        <form asp-action="Delete" method="post">
            <input type="hidden" name="claimValues"
                   value="@claim.Type;@claim.Value;@claim.Issuer" />
            <button type="submit" class="btn btn-sm btn-danger">
                Șterge
            </button>
        </form>
    </td>
</tr>
    }
</table>