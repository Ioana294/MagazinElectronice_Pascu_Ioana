    ViewData["Title"] = "Ștergere";
}

<h1>Ștergere</h1>
<p class="text-danger">@ViewData["ErrorMessage"]</p>
<h3>Sunteți sigur că doriți să ștergeți?</h3>
<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Denumire)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Denumire)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descriere)
        </dt>
        <dd class = "col-sm-10">
