@model MagazinElectronice_Pascu_Ioana.Models.Client

@{
    ViewData["Title"] = "Detalii";
}

<h1>Detalii</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prenume)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Adresa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adresa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Comenzi)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Device</th>
                    <th>Data comandă</th>
                </tr>
                @foreach (var item in Model.Comenzi)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Device.Denumire)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataComanda)
                </td>
            </tr>
                }
            </table>
        </dd>
