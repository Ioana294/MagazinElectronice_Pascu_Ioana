@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<h1 class="bg-info text-white">Toate rolurile</h1>
<a asp-action="Create" class="btn btn-secondary">Creează un rol</a>
<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Nume</th><th>Actualizează</th><th>Șterge</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Actualizează</a></td>            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Șterge
                    </button>
                </form>
            </td>
        </tr>
    }
</table>